          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "phoneNumber",
                  "contactType"
                ],
                "properties": {
                  "name": {
                    "description": "Contacts's name",
                    "type": "string",
                    "example": "John Doe"
                  },
                  "phoneNumber": {
                    "description": "Contacts's phone number",
                    "type": "integer",
                    "example": "+380200000000"
                  },
                  "contactType": {
                    "description": "Contacts's type",
                    "type": "string",
                    "example": "work",
                    "enum": [
                      "work",
                      "personal",
                      "home"
                    ]
                  },
                  "email": {
                    "description": "Contact's email",
                    "type": "string",
                    "example": "john.doe@mail.com"
                  },
                  "isFavourite": {
                    "description": "is favourite contact",
                    "type": "boolean",
                    "example": true
                  },
                  "photo": {
