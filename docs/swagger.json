    "/stories": {
      "get": {
        "tags": [
          "Stories"
        ],
        "summary": "Get list of stories",
        "operationId": "getStories",
        "description": "Get list stories",
        "security": [],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "description": "page numbering",
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "in": "query",
            "name": "perPage",
            "description": "number of stories",
            "schema": {
              "type": "integer",
              "example": 10
            }
          },
          {
            "in": "query",
            "name": "category",
            "description": "if you enter the country id from the database, it will display the stories of this country",
            "schema": {
              "type": "string",
              "example": "68fb50c80ae91338641121f0"
            }
          },
          {
            "in": "query",
            "name": "type",
            "description": "if you run popular, it will display the top 3 stories",
            "schema": {
              "type": "string",
              "example": "popular"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully found stories!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found stories!"
                    },
                    "data": {
                      "type": "object",
                      "required": [
                        "data",
                        "page",
                        "perPage",
                        "totalItems",
                        "totalPages",
                        "hasNextPage",
                        "hasPreviousPage"
                      ],
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/stories"
                          }
                        },
                        "page": {
                          "type": "number",
                          "example": 1
                        },
                        "perPage": {
                          "type": "number",
                          "example": 10
                        },
                        "totalItems": {
                          "type": "number",
                          "example": 4
                        },
                        "totalPages": {
                          "type": "number",
                          "example": 4
                        },
                        "hasNextPage": {
                          "type": "boolean",
                          "example": false
                        },
                        "hasPreviousPage": {
                          "type": "boolean",
                          "example": true
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/404-NotFoundError"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      },
      "post": {
        "tags": [
          "Stories"
        ],
        "summary": "Create storie",
        "operationId": "createStories",
        "description": "Create a storie with payload",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "required": [
                  "img",
                  "title",
                  "article",
                  "category"
                ],
                "properties": {
                  "img": {
                    "description": "Image file",
                    "type": "string",
                    "format": "binary"
                  },
                  "title": {
                    "description": "Story titile",
                    "type": "string",
                    "example": "Йорданія: шлях у Петр"
                  },
                  "article": {
                    "description": "Story content",
                    "type": "string",
                    "example": "Петра — одне з нових чудес світу, і вживу воно вражає ще більше. Ми пройшли Сік — вузький каньйон, який веде до Скарбниці, і вразилися масштабом стародавнього міста, висіченого у скелях. День минув у дослідженні храмів, амфітеатрів і гробниць. А ввечері ми залишилися на нічне шоу, коли Петра освітлюється сотнями свічок. Атмосфера була настільки чарівною, що здавалося, час повернувся на тисячі років назад."
                  },
                  "category": {
                    "description": "Category id",
                    "type": "string",
                    "example": "6881563901add19ee16fd017"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Createa stories",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully created a stories!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/stories-post"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404-NotFoundError"
          },
          "500": {
            "$ref": "#/components/responses/500"
          }
        }
      }
    },
    "/stories/{id}": {
